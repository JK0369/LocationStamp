platform :ios, '13.0'

workspace 'LocationStamp'
project 'LocationStamp/LocationStamp.project'
project 'Domain/Domain.project'

def shared_pods
    pod 'RxSwift'
    pod 'RxCocoa'
    pod 'Toast-Swift'
    pod 'JGProgressHUD'
    pod 'RxReachability'
    pod 'Kingfisher'
    pod 'XCoordinator'
    pod 'Kingfisher'
    pod 'AnyFormatKit'
    pod 'Moya/RxSwift'
    pod 'XCoordinator'
    pod 'KeychainAccess'
end

target "LocationStamp" do
    project "LocationStamp/LocationStamp.project"
    shared_pods
end

abstract_target 'Global' do
   pod 'XCoordinator', :configurations => ['Alpha', 'Release']
   target "Domain" do
     project "Domain/Domain.project"
     shared_pods
   end
 end
